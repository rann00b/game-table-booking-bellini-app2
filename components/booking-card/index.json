  "variables": [
    {
      "name": "getPlayers",
      "type": "method",
      "description": "",
      "body": "return $ctrl.booking?.players?.join(\", \") || \"Player1, Player2\"",
      "invokeOnLoad": false,
      "isAsync": false,
      "returnType": {
        "name": "any"
      },
      "parameters": []
    },
    {
      "name": "getStatusLabel",
      "type": "method",
      "description": "",
      "body": "const status = $ctrl.booking?.status || \"pending\";\r\nreturn status === 'accepted' ? 'Validé' : (status === 'canceled' ? 'Annulé' : (status === 'refused' ? 'Refusé' : 'En Attente'))",
      "invokeOnLoad": false,
      "isAsync": false,
      "returnType": {
        "name": "any"
      },
      "parameters": []
    },
    {
      "name": "getStatusColor",
      "type": "method",
      "description": "",
      "body": "const status = $ctrl.booking?.status || \"pending\";\r\nreturn status === 'accepted' ? 'green' : (status === 'canceled' ? 'yellow' : (status === 'refused' ? 'red' : 'blue'))",
      "invokeOnLoad": false,
      "isAsync": false,
      "returnType": {
        "name": "any"
      },
      "parameters": []
    },
    {
      "name": "getDateTimeLabel",
      "type": "method",
      "description": "",
      "body": "if($ctrl.booking?.dateTime) {\r\n    return moment($ctrl.booking?.dateTime).format(\"DD/MM/yyyy HH:mm\");\r\n}\r\nelse\r\n    return \"2023/07/01 10:30\";",
      "invokeOnLoad": false,
      "isAsync": false,
      "returnType": {
        "name": "any"
      },
      "parameters": []
    },
    {
      "name": "getGameImage",
      "type": "method",
      "description": "",
      "body": "if(!$ctrl.booking) return \"\";\r\n\r\nswitch($ctrl.booking.game) {\r\n    case \"Warhammer 40k\": return \"assets/apps/game-table-booking/components/booking-card/warhammer40k_logo.png\";\r\n    case \"Age of Sigmar\": return \"assets/apps/game-table-booking/components/booking-card/aos_logo.png\";\r\n    case \"Star Wars Legion\": return \"assets/apps/game-table-booking/components/booking-card/swl_logo.png\";\r\n    case \"A Song of Ice and Fire\": return \"assets/apps/game-table-booking/components/booking-card/asoiaf_logo.png\";\r\n    case \"Marvel Crisis Protocol\": return \"assets/apps/game-table-booking/components/booking-card/mcp_logo.png\";\r\n    case \"Star Wars Shatterpoint\": return \"assets/apps/game-table-booking/components/booking-card/sws_logo.png\";\r\n    case \"Infinity\": return \"assets/apps/game-table-booking/components/booking-card/infinity_logo.png\";\r\n}",
      "invokeOnLoad": false,
      "isAsync": false,
      "returnType": {
        "name": "any"
      },
      "parameters": []
    }
  ],
